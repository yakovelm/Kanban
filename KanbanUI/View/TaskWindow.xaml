<Window x:Class="KanbanUI.View.TaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KanbanUI.View"
        mc:Ignorable="d"
        Title="TaskWindow" Height="399" Width="861">
    <StackPanel Orientation="Vertical" Margin="0,0,2,-4">
        <Label Content="{Binding Path=Title, Mode=TwoWay}" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Margin="278,0,337,0" Width="177"/>
        <TextBlock x:Name="Desc" TextWrapping="Wrap" Height="232" Margin="10,0"><Run Text="{Binding Path=Desc, Mode=TwoWay}"/></TextBlock>
        <Label Content="{Binding Path=Assignee, Mode=TwoWay}" HorizontalAlignment="Right" FontSize="15" FontWeight="Bold" Margin="0,0,365,0" Width="178"/>
            <Label Content="{Binding Path=Due, Mode=TwoWay}" HorizontalAlignment="Center" FontSize="15" FontWeight="Bold" Margin="306,0,365,0" Width="178" Height="38"/>
        <Label Content="{Binding Path=Cre, Mode=TwoWay}" HorizontalAlignment="Center" FontSize="15" FontWeight="Bold" Margin="278,0,337,0" Width="177"/>
    </StackPanel>
</Window>
