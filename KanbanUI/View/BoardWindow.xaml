<Window x:Class="KanbanUI.View.BoardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KanbanUI.View"
        mc:Ignorable="d"
        Title="BoardWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Grid>
                <Label Content="{Binding Path=Name, Mode=TwoWay}" HorizontalAlignment="Left" Margin="-2,9,0,0" VerticalAlignment="Top"/>
                <ListBox ItemsSource="{Binding Path=ColumnList, Mode=TwoWay}" SelectedItem="{Binding Path=DataContext.SelectedColumn, Mode=TwoWay}" Width="200">
                    
                </ListBox>
            </Grid>
            <Grid>

            </Grid>
            
        </StackPanel>
    </Grid>
</Window>
